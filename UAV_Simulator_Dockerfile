# Base image: Ubuntu Noble 24.04
FROM ubuntu:24.04

# Prevent interactive tzdata prompt and set noninteractive frontend
ENV DEBIAN_FRONTEND=noninteractive

# Install core utilities and create a non-root user (optional)
RUN apt-get update && apt-get install -y \
    locales \
    tzdata \
    sudo \
    gnupg2 \
    curl \
    lsb-release \
    software-properties-common && \
    locale-gen en_US en_US.UTF-8 && \
    update-locale LANG=en_US.UTF-8

ENV LANG en_US.UTF-8
ENV LANGUAGE en_US:en
ENV LC_ALL en_US.UTF-8

# -----------------------------------------------------------------------------
# Configure ROS 2 Jazzy Jalisco repository and Gazebo Harmonic (gz-sim)
# -----------------------------------------------------------------------------
RUN curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.asc | apt-key add - && \
    echo "deb [arch=amd64 signed-by=/etc/apt/trusted.gpg] http://packages.ros.org/ros2/ubuntu $(lsb_release -cs) main" \
    > /etc/apt/sources.list.d/ros2.list

# Gazebo (Ignition) repository
RUN echo "deb [arch=amd64] http://packages.osrfoundation.org/gazebo/ubuntu $(lsb_release -cs) main" \
    > /etc/apt/sources.list.d/gazebo-stable.list && \
    curl -sSL http://packages.osrfoundation.org/gazebo.key | apt-key add -

RUN apt-get update && \
    apt-get install -y \
    ros-jazzy-desktop \
    python3-colcon-common-extensions \
    python3-argcomplete \
    python3-dev \
    python3-pip \
    git \
    build-essential \
    wget \
    unzip \
    nano \
    # Gazebo Harmonic (gz-sim) and ROS2 bridge
    gz-sim7 \
    ros-jazzy-gz-ros2-control \
    # OMPL and dependencies
    ros-jazzy-ompl \
    # Fast-Planner dependencies
    libeigen3-dev libomp-dev libpcl-dev libboost-all-dev && \
    rm -rf /var/lib/apt/lists/*

# Upgrade pip and install Python packages
RUN python3 -m pip install --upgrade pip && \
    pip3 install osqp stable-baselines3[extra]

# Clone and install RLQP (ADMM parameter tuning)
RUN git clone --depth=1 https://github.com/berkeley-research/rlqp.git /opt/rlqp && \
    pip3 install --no-cache-dir -e /opt/rlqp

# Clone Fast-Planner source and build with colcon
RUN mkdir -p /fast_planner_ws/src && \
    git clone --depth=1 https://github.com/HKUST-Aerial-Robotics/Fast-Planner.git \
    /fast_planner_ws/src/Fast-Planner && \
    /bin/bash -c "source /opt/ros/jazzy/setup.bash && cd /fast_planner_ws && colcon build --symlink-install"

# Set up entrypoint for ROS2 sourcing
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

ENV ROS_DISTRO=jazzy

ENTRYPOINT ["/entrypoint.sh"]
CMD ["bash"]
